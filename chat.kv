#:import hex kivy.utils.get_color_from_hex
#:import Window kivy.core.window.Window
#:import get_color_from_hex kivy.utils.get_color_from_hex

<User>:
    size_hint_y: None
    height:"40dp"
    size_hint_x: 0.4
    adaptive_height:True
    pos_hint: {'center_x': 0.8}
    MDScreen:
        #md_bg_color: app.theme_cls.primary_color
        radius: dp(25)
        MDLabel:
            id: user
            text: root.text
            color: 1,1,1,1
            font_size: root.font_size
            # font_style: "Caption"
            valign: "middle"
            halign: 'center'
    
<Response>:
    size_hint_y: None
    height:"40dp" 
    size_hint_x: 0.4
    adaptive_height:True
    pos_hint: {'center_x': 0.2}
    MDScreen:
        md_bg_color: get_color_from_hex("#474747")
        radius: dp(25)
        
        MDLabel:
            id: ai
            text: root.text
            color: 1,1,1,1 
            font_size:dp(16)
            valign: "middle"
            halign: 'center'

<ChatScreen>:
    BoxLayout:
        orientation: "vertical"
        spacing:dp(20)

        MDTopAppBar:
            title:"SAIS"
            left_action_items: [["robot"]]
        
        BoxLayout:
            size_hint_y: None
            height: 40
        
            MDLabel:
                text: "Hello you can ask me any question!. I'm here to  help"
                color: 0,0,0,.5
                font_size:dp(16)
                font_style: "Caption"
                halign: 'center'
                valign: 'middle'


        ScrollView:
            MDBoxLayout:
                id: chat_area
                adaptive_height:True
                orientation: 'vertical'
                padding:dp(20)
                spacing:dp(12)

                
        BoxLayout:
            size_hint_y: None
            height: 50
            padding: dp(40)
            spacing: dp(10)
            MDTextField:
                id: message
                hint_text: "Enter message here..."
                font_style: "Caption"
                font_size: dp(16)
                multiline: False
                mode: "round"
                max_text_length: 150
                helper_text: "Massage"
                size_hint_x: 0.85
            MDFillRoundFlatIconButton:
                icon: "send"
                text: "Send"
                on_press: root.send_message()
                on_release: root.responses()
                size_hint_x: 0.15